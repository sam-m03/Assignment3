<%- include('../Partials/header.ejs') %>
<%- include('../Partials/main_nav.ejs') %>
<!--Content for Edit Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <!-- Workout Type -->
                <div class="form-group">
                    <label for="typeTextField">Workout Type</label>
                    <input type="text" class="form-control" id="typeTextField" placeholder="Enter workout type" name="type" value="<%= workoutModel.type %>" required>
                </div>
                
                <!-- Workout Date & Time -->
                <div class="form-group">
                    <label for="timeTextField">Workout Date & Time</label>
                    <input type="datetime-local" class="form-control" id="timeTextField" name="time" value="<%= workoutModel.time %>" required>
                </div>
                
                <!-- Number of Reps -->
                <div class="form-group">
                    <label for="repsTextField">Number of Reps</label>
                    <input type="number" class="form-control" id="repsTextField" name="reps" value="<%= workoutModel.reps %>" required>
                </div>
                
                <!-- Number of Sets -->
                <div class="form-group">
                    <label for="setsTextField">Number of Sets</label>
                    <input type="number" class="form-control" id="setsTextField" name="sets" value="<%= workoutModel.sets %>" required>
                </div>
                
                <!-- Intensity Level -->
                <div class="form-group">
                    <label for="intensityDropdown">Intensity Level</label>
                    <select class="form-control" id="intensityDropdown" name="intensity" required>
                        <option value="" disabled>Select intensity level</option>
                        <option value="Low" <%= workoutModel.intensity === 'Low' ? 'selected' : '' %>>Low</option>
                        <option value="Medium" <%= workoutModel.intensity === 'Medium' ? 'selected' : '' %>>Medium</option>
                        <option value="High" <%= workoutModel.intensity === 'High' ? 'selected' : '' %>>High</option>
                        <option value="Extreme" <%= workoutModel.intensity === 'Extreme' ? 'selected' : '' %>>Extreme</option>
                    </select>
                </div>
                
                <!-- Buttons -->
                <div class="mt-4">
                    <button class="btn btn-primary me-2" type="submit">Submit
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-warning me-3" type="reset">Reset
                        <i class="fas fa-redo"></i>
                    </button>
                    <button class="btn btn-secondary" type="button" onclick="window.history.back()">Cancel
                        <i class="fas fa-undo"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer.ejs') %>
<%- include('../Partials/bottom_nav.ejs') %>

<%- include('../Partials/header.ejs') %>
<%- include('../Partials/main_nav.ejs') %>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <!-- Workout Type -->
                <div class="form-group">
                    <label for="workoutTextField">Workout Type</label>
                    <input type="text" class="form-control" id="workoutTextField" placeholder="Enter workout type" name="workout" required>
                </div>
                
                <!-- Workout Date & Time -->
                <div class="form-group">
                    <label for="timeTextField">Workout Date & Time</label>
                    <input type="datetime-local" class="form-control" id="timeTextField" name="time" required>
                </div>
                
                <!-- Number of Reps -->
                <div class="form-group">
                    <label for="repsTextField">Number of Reps</label>
                    <input type="number" class="form-control" id="repsTextField" name="repetitions" min=0 value="0" required>
                </div>
                
                <!-- Number of Sets -->
                <div class="form-group">
                    <label for="setsTextField">Number of Sets</label>
                    <input type="number" class="form-control" id="setsTextField" name="sets" min=0 value="0" required>
                </div>
                
                <!-- Intensity Level -->
                <div class="form-group">
                    <label for="intensityDropdown">Intensity Level</label>
                    <select class="form-control" id="intensityDropdown" name="intensity" required>
                        <option value="" disabled selected>Select intensity level</option>
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                        <option value="Extreme">Extreme</option>
                    </select>
                </div>
                
                <!-- Buttons -->
                <div class="mt-4">
                    <button class="btn btn-primary me-2" type="submit">Submit
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-warning me-3" type="reset">Reset
                        <i class="fas fa-redo"></i>
                    </button>
                    <button class="btn btn-secondary" type="button" onclick="window.history.back()">Cancel
                        <i class="fas fa-undo"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('../Partials/footer.ejs') %>
<%- include('../Partials/bottom_nav.ejs') %>
